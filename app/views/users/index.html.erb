<h1>Users</h1>
<ul class="user-list">
  <% @users.each do |user| %>
    <li class="user">
      <img class="user-image" src="user.photo" alt="User Image" />
      <div class="user-details">
        <h2 class="username"><%= link_to user.name, user_path(user) %></h2>
        <p class="post-count">Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>