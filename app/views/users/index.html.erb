<h1>Users</h1>
<ul class="user-list">
  <li class="user">
    <img src="user1.jpg" alt="User Image 1" class="user-image" />
    <div class="user-details">
      <h2 class="username">Username 1</h2>
      <p class="post-count">Number of posts: 10</p>
    </div>
  </li>
  <li class="user">
    <img src="user2.jpg" alt="User Image 2" class="user-image" />
    <div class="user-details">
      <h2 class="username">Username 2</h2>
      <p class="post-count">Number of posts: 5</p>
    </div>
  </li>
  
  <% @users.each do |user| %>
    <li class="user">
      <img class="user-image" src="user.photo" alt="User Image 2" />
      <div class="user-details">
        <h2 class="username"><%= user.name %></h2>
        <p class="post-count">Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>