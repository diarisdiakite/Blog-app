<div class="user-list">
  <div class="user">
    <img class="user-image" src="user.photo" alt="User Image" />
    <div class="user-details">
      <h2 class="username"><%= @user.name %></h2>
      <br>
      <p class="post-count">Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div class="bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
    <br>
    <small class="post-count"></small>
  </div>
  <ul class="user-posts">
    <% @posts.each do |post| %>
      <li class="user-post">
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <br>
        <small class="post-count"></small>
      </li>
    <% end %>
  </ul>
</div>
<div class="button">
  <button><%= link_to "See all posts", user_posts_path(@user) %></button>
</div>