<div class="user-list">
  <div class="user">
    <img class="user-image" src="<%= @user.photo %>" alt="User Image" />
    <div class="user-details">
      <h2 class="username"><%= @user.name %></h2>
      <br>
      <p class="post-count">Number of posts: <%= @user.posts.count %></p>
    </div>
  </div>
  <div>
    <%= link_to "Create New Post", new_user_post_path(@user) %>
  </div>
  <ul class="user-posts">
    <% @posts.each_with_index do |post, index| %>
      <li>
        <div class="user-post">
          <h3><%= link_to "Post ##{post.id}: #{post.title}", user_post_path(post.author, post) %></h3>
          <p><%= post.text %></p>
          <small class="post-count"><%= post.comments.count %> comments</small>
        </div>
        <div class="comments">
          <ul>
            <% @comments[index].each do |comment| %>
              <li><%= "#{comment.user.name}: #{comment.text}" %></li>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="button">
  <button>Pagination</button>
</div>
